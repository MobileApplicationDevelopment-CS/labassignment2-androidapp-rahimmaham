<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#818786" />
            <gradient android:angle="-90" android:startColor="#919b99" android:endColor="#617e79"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#8d9c99" />
            <solid android:color="#6e807c"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#8d9c99" />
            <gradient android:angle="-90" android:startColor="#b3b9b8" android:endColor="#666b69" />
        </shape>
    </item>
</selector>